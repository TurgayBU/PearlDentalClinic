<Window x:Class="PearlDentalClinic.DoctorMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PearlDentalClinic"
        mc:Ignorable="d"
        Title="DoctorMain" Height="450" Width="800">
    <Grid>
        <Button Content="Appointments" Width="120" Height="50" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,100,0,0" Click="BtnAppointments_Click" />

        <!-- Doctor Change Info Button -->
        <Button Content="Change Info" Width="120" Height="50" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,180,0,0" Click="BtnDoctorChangeInfo_Click" />

        <!-- Back Button -->
        <Button Content="Log Out" Width="100" Height="40" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,260,0,0" Click="BtnBack_Click" />
    </Grid>
</Window>
